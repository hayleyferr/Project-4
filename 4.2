//====changeOfBase===============================================================
//
//	Changes base from decimal to either binary, base 8 or base 16
//
//===============================================================================


void changeOfBase()
{
	char hexdigits[] = "0123456789ABCDEF";
	Stack<int, 10> remainderstack;
	remainderstack.ClearStack();
	int n;
	int choose;
	cout << "Enter an integer number : ";
	cin >> n;
	cout << "Enter the new base(2,8,16): ";
	cin >> choose;
	int remainder;
	if (choose == 2)
	{
		while (n > 0)
		{
			remainderstack.PushStack(n % 2);
			n /= 2;
		}

		while (!remainderstack.EmptyStack())
		{
			cout << remainderstack.PopStack();
		}
		cout << endl;
	}


	else if (choose == 8)
	{
		while (n > 0)
		{
			remainder = n % 8;
			remainderstack.PushStack(remainder);
			n /= 8;
		}
		while (!remainderstack.EmptyStack())
		{
			cout << remainderstack.PopStack();
		}
		cout << endl;

	}
	else if (choose == 16)
	{
		while (n > 0)
		{
			remainder = n % 16;
			remainderstack.PushStack(remainder);
			n /= 16;
		}
		while (!remainderstack.EmptyStack())
		{
			cout << hexdigits[remainderstack.PopStack()];
		}
		cout << endl;

	}
	char x;
	cout << "CONTINUE(y/n)?";
	cin >> x;
	if (x == 'y')
	{
		cin.ignore();
		cin.clear();
		changeOfBase();
	}

}

//====main========================================================================
