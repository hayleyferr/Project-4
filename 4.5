#include <iostream>

using namespace std;

//====Recursive==================================================================
//
//	input: int n: Number input for recursive function
//
//	sum the powers of two from n to 2
//
//===============================================================================

int Recursive(int n)
{
	if (n == 2)
		return 4;
	else return (2 ^ n) + Recursive(n-1);
}

//===main=========================================================================
//
//================================================================================

int main()
{
	int input;
	cin >> input;
	int total = Recursive(input);
	cout << total;
};
 
